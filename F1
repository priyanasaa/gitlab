-------- name: "Manage Apache Service"
  hosts: webservers
  become: true

  tasks:
    - name: "Install Apache2"
      apt:
        name: apache2
        state: present
      notify: "Restart Apache"

  handlers:
    - name: "Restart Apache"
      service:
        name: apache2
        state: restar
